.slot-machine-page {
  min-height: 100vh;
  background: linear-gradient(135deg, #1a0a2e 0%, #16213e 50%, #0f3460 100%);
  padding: 2rem 1rem;
  color: white;
  font-family: 'Cinzel', serif;
}

.slot-machine-container {
  max-width: 600px;
  margin: 0 auto;
  text-align: center;
}

.slot-machine-wrapper {
  max-width: 1400px;
  margin: 0 auto;
}

.slot-machine-header {
  text-center;
  margin-bottom: 2rem;
}

.slot-machine-header h1 {
  font-size: 3rem;
  color: #ffd700;
  text-shadow: 0 0 20px rgba(255, 215, 0, 0.5);
  margin-bottom: 0.5rem;
}

.slot-subtitle {
  color: #b19cd9;
  font-size: 0.9rem;
}

.slot-machine-layout {
  display: grid;
  grid-template-columns: 250px 1fr 250px;
  gap: 1.5rem;
}

/* Paytable Panel */
.slot-paytable-panel,
.slot-stats-panel {
  background: rgba(75, 0, 130, 0.3);
  border: 2px solid rgba(138, 43, 226, 0.5);
  border-radius: 15px;
  padding: 1.5rem;
  backdrop-filter: blur(10px);
}

.slot-paytable-panel h3,
.slot-stats-panel h3 {
  color: #ffd700;
  text-align: center;
  margin-bottom: 1rem;
  font-size: 1.2rem;
}

.paytable-items,
.stats-items {
  display: flex;
  flex-direction: column;
  gap: 0.75rem;
}

.paytable-item,
.stat-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 0.85rem;
}

.paytable-symbol {
  width: 40px;
  height: 40px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24px;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 8px;
  flex-shrink: 0;
}

.paytable-pays {
  color: #b19cd9;
  font-size: 0.75rem;
}

.paytable-special {
  margin-top: 1.5rem;
  padding-top: 1rem;
  border-top: 1px solid rgba(138, 43, 226, 0.3);
}

.paytable-special h4 {
  color: #ffd700;
  font-size: 0.95rem;
  margin-bottom: 0.75rem;
}

/* Game Center */
.slot-machine-center {
  display: flex;
  flex-direction: column;
  gap: 1rem;
}

.slot-machine-game {
  background: linear-gradient(180deg, rgba(255,215,0,0.1) 0%, rgba(138,43,226,0.1) 100%);
  border: 3px solid #ffd700;
  border-radius: 20px;
  padding: 2rem;
  box-shadow: 0 0 50px rgba(255,215,0,0.3), inset 0 0 30px rgba(255,215,0,0.1);
}

.slot-grid {
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
  margin-bottom: 1rem;
}

.slot-row {
  display: flex;
  gap: 0.5rem;
  justify-content: center;
}

.slot-cell {
  width: 70px;
  height: 70px;
  background: linear-gradient(145deg, #2a1a4a, #1a0a2e);
  border: 2px solid #4a3a6a;
  border-radius: 8px;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  transition: all 0.3s ease;
}

.slot-symbol {
  font-size: 32px;
}

.slot-multiplier-badge {
  position: absolute;
  top: -8px;
  right: -8px;
  background: linear-gradient(135deg, #ff6b35, #f7931e);
  color: white;
  font-size: 10px;
  font-weight: bold;
  padding: 2px 6px;
  border-radius: 10px;
  z-index: 10;
  animation: pulse 1s ease-in-out infinite;
}

@keyframes pulse {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.1); }
}

.slot-win-display {
  text-align: center;
  font-size: 1.8rem;
  font-weight: bold;
  color: #ffd700;
  margin: 1rem 0;
  text-shadow: 0 0 10px rgba(255, 215, 0, 0.8);
  animation: winPop 0.5s ease-out;
}

@keyframes winPop {
  0% { transform: scale(0); opacity: 0; }
  50% { transform: scale(1.2); }
  100% { transform: scale(1); opacity: 1; }
}

.slot-tumble-log {
  background: rgba(0, 0, 0, 0.4);
  border-radius: 10px;
  padding: 1rem;
  max-height: 150px;
  overflow-y: auto;
}

.tumble-log-title {
  color: #ffd700;
  font-weight: bold;
  margin-bottom: 0.5rem;
  font-size: 0.9rem;
}

.tumble-log-item {
  color: #b19cd9;
  font-size: 0.8rem;
  margin-bottom: 0.25rem;
}

.slot-tumble-log::-webkit-scrollbar {
  width: 6px;
}

.slot-tumble-log::-webkit-scrollbar-track {
  background: rgba(255, 255, 255, 0.1);
}

.slot-tumble-log::-webkit-scrollbar-thumb {
  background: #ffd700;
  border-radius: 3px;
}

/* Controls */
.slot-controls {
  background: rgba(75, 0, 130, 0.3);
  border: 2px solid rgba(138, 43, 226, 0.5);
  border-radius: 15px;
  padding: 1.5rem;
  display: flex;
  align-items: center;
  justify-content: space-around;
  flex-wrap: wrap;
  gap: 1rem;
}

.slot-control-item {
  text-align: center;
}

.control-label {
  font-size: 0.75rem;
  color: #b19cd9;
  margin-bottom: 0.25rem;
}

.control-value {
  font-size: 1.2rem;
  font-weight: bold;
  color: #ffd700;
}

.win-value {
  color: #4ade80;
}

.highlight-value {
  color: #ff6b35;
}

.slot-bet-controls {
  display: flex;
  align-items: center;
  gap: 0.5rem;
}

.bet-btn {
  width: 40px;
  height: 40px;
  background: linear-gradient(135deg, #8b5cf6, #7c3aed);
  border: none;
  border-radius: 8px;
  color: white;
  font-size: 1.2rem;
  cursor: pointer;
  transition: all 0.2s;
}

.bet-btn:hover:not(:disabled) {
  background: linear-gradient(135deg, #7c3aed, #6d28d9);
  transform: scale(1.05);
}

.bet-btn:disabled {
  opacity: 0.5;
  cursor: not-allowed;
}

.spin-button {
  padding: 1rem 3rem;
  background: linear-gradient(135deg, #ffd700 0%, #ff8c00 100%);
  border: none;
  border-radius: 12px;
  font-size: 1.3rem;
  font-weight: bold;
  color: #1a0a2e;
  cursor: pointer;
  transition: all 0.3s;
  box-shadow: 0 4px 15px rgba(255, 215, 0, 0.4);
}

.spin-button:hover:not(:disabled) {
  transform: scale(1.05);
  box-shadow: 0 6px 25px rgba(255, 215, 0, 0.6);
}

.spin-button:disabled {
  background: linear-gradient(135deg, #666 0%, #444 100%);
  cursor: not-allowed;
  opacity: 0.6;
}

/* Stats Panel */
.stat-label {
  color: #b19cd9;
  font-size: 0.85rem;
}

.stat-value {
  color: white;
  font-weight: bold;
}

/* Login Notice */
.login-notice {
  background: rgba(255, 107, 53, 0.2);
  border: 2px solid rgba(255, 107, 53, 0.5);
  border-radius: 15px;
  padding: 2rem;
  text-align: center;
  margin-top: 2rem;
}

.login-notice p {
  color: #ff6b35;
  font-size: 1.2rem;
  margin: 0;
}

/* Responsive */
@media (max-width: 1200px) {
  .slot-machine-layout {
    grid-template-columns: 1fr;
  }

  .slot-paytable-panel,
  .slot-stats-panel {
    max-width: 600px;
    margin: 0 auto;
  }
}

@media (max-width: 768px) {
  .slot-machine-header h1 {
    font-size: 2rem;
  }

  .slot-cell {
    width: 50px;
    height: 50px;
  }

  .slot-symbol {
    font-size: 24px;
  }

  .slot-controls {
    flex-direction: column;
  }

  .spin-button {
    width: 100%;
  }
}
